<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%;height: 500px;"></div>
<h1>All Campgrounds</h1>
<% for (let camp of campF) { %>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
        <div class="col-md-4">
            <% if(camp.images.length>0){ %>
                <img src="<%= camp.images[0].path %>" class="card-img-top" alt="">
            <% } else { %>
                <img src="https://res.cloudinary.com/dopvsufeh/image/upload/v1622949073/CampRev/sor5zvxbibrxc6tooclt.jpg" class="card-img-top" alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
            </div>
        </div>
        </div>
    </div>
<% } %>
<script>
